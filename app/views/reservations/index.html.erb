<div class="container-fiuld reservations">
<h4 class="pb-4">予約済みルーム一覧</h4>
<table>
	<thead>
		<tr align="center">
			<th>ルーム画像</th>
			<th>ルーム名</th>
			<th>ルーム紹介</th>
			<th>合計料金</th>
			<th>開始日</th>
			<th>終了日</th>
      <th>予約確定日時</th>
		</tr>
	</thead>
	  <tbody>
      <% @reservations.each_with_index do |reservation, line| %>
        <% if line % 2 == 1 %>
          <tr style="background-color: #f9fafb;">
        <% else %>
			    <tr>
        <% end %>
				  <td><%= link_to image_tag(Room.find(reservation.room_id).image.url, class: 'reservations-image'), "/rooms/#{reservation.room_id}"%> </td>
				  <td class="posts-name"><%= link_to Room.find(reservation.room_id).name, "rooms/#{reservation.room_id}" %></td>
				  <td class="posts-content"><%= Room.find(reservation.room_id).room_introduction %></td>
				  <td class="price-icon"><%= reservation.total_amount %></td>
				  <td><%= reservation.start_date %></td>
				  <td><%= reservation.end_date %></td>
          <td><%= reservation.created_at %></td>
			 </tr>
      <% end %>
    </tbody>
  </table>
</div>
 