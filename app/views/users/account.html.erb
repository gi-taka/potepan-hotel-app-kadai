<div class="container-field user">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li class="active">
          <%= link_to 'アカウント', '/users/account' %>
        </li>
        <li>
          <%= link_to 'プロフィール', '/users/profile' %>
        </li>
      </ul>
    </div>
    <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
      <ul>
        <li class="active">
          <%= link_to 'アカウント', '/users/account' %>
        </li>
        <li>
          <%= link_to 'プロフィール', '/users/profile' %>
        </li>
      </ul>
    </div>
    <div class="col-md-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>アカウント</h5>
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3" for="mail">メールアドレス</label>
            <div class="col-md-9">
              <%= User.find(session[:user_id]).mail %>
            </div> 
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <label class="col-md-3" for="password_digest">パスワード</label>
            <div class="col-md-9">
              <%= '*'*User.find(session[:user_id]).password_digest.length %>
            </div> 
          </div>
        </div>
        <div class="update-content">
          <div class="row">
            <%= link_to '編集', "/users/#{session[:user_id]}/edit", class: 'col-md-2 btn btn-primary mx-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>