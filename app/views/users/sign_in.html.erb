<div class="container device">
  <div class="device-frame">
    <p class="my-4">ログイン</p>
    <div class="device-inner">
      <%= form_with url: '/', method: :get, local: true do |form| %>
        <div class="field form-row">
          <div class="col-2 required-b pt-2">
          </div>
          <%= form.text_field :mail, class: 'form-control col-10 px-2', placeholder: 'メールアドレス' %>    
        </div>
        <div class="field form-row">
          <div class="col-2 required-b pt-2">
          </div>
          <%= form.text_field :password, class: 'form-control col-10 px-2', placeholder: 'パスワード' %>    
        </div>
        <div class="action">
          <%= form.submit 'ログイン', class: 'form-control my-4 btn-primary' %>
        </div>
      <% end %>
      <%= link_to '新しいアカウントを作成', :users_sign_up %>
    </div>
  </div>
</div>