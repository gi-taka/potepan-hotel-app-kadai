<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-frame">
          <div class="form-area">
            <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
            <%= form_with url: rooms_search_path, method: :get, local: true do |form| %>
              <%= form.label '___' do %>
              エリア
              <% end %>
              <%= form.text_field :area, class: 'form-control mb-4', placeholder: '東京' %>
              <%= form.submit '探す', class: 'form-control mb-4 btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="panel-area m-5">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class="row">
        <div class="panel-item col-lg-3 col-6">
          <span>東京</span>
          <%= link_to image_tag('/assets/img_tokyo.jpeg', class: 'panel-image'), rooms_search_path(area: "東京") %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>大阪</span>
          <%= link_to image_tag('/assets/img_osaka.jpeg', class: 'panel-image'), rooms_search_path(area: "大阪") %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>京都</span>
          <%= link_to image_tag('/assets/img_kyoto.jpeg', class: 'panel-image'), rooms_search_path(area: "京都") %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>札幌</span>
          <%= link_to image_tag('/assets/img_sapporo.jpeg', class: 'panel-image'), rooms_search_path(area: "札幌") %>
        </div>
      </div>
    </div>
  </div>
</div>