<div class="container-field room-posts">
<h4 class="pb-4">登録済みルーム一覧</h4>
<table>
  <thead>
    <tr align="center">
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>料金</th>
      <th>作成日</th>
    </tr>
  </thead>
    <tbody>
      <% @rooms.each_with_index do |room, line| %>
      <% if line % 2 == 1 %>
      <tr style="background-color: #f9fafb;">
      <% else %>
      <tr>
      <% end %>
        <td><%= link_to image_tag(room.image.url, class: 'room-posts-image'), "/rooms/#{room.id}" %></td>
        <td class="posts-name"><%= link_to room.name %></td>
        <td class="posts-content"><%= room.room_introduction %></td>
        <td class="price-icon"><%= room.fee %></td>
        <td><%= room.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
 