<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <img alt="部屋画像" class="room-show-image" src="<%= @room.image %>" />
      <div class="room-show-detail">
        <div class="room-show-detail-icon">
          <a href="/"><img class="host-icon" src="/assets/default_icon.jpg" /></a>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detail-content"><%= @room.room_introduction %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @room.fee %> / 日</h5>
        <div class="room-show-date-select">
          <%= form_with url: '/reservations/new', method: :get, local: true do |form| %>
            <label for="start_date">開始日</label>
            <%= form.date_field :start_date, class: 'form-control mb-4' %>
            <label for="end_date">終了日</label>
            <%= form.date_field :end_date, class: 'form-control mb-4' %>
            <label for="person_num">人数</label>
            <%= form.number_field :person_num, class: 'form-control mb-4' %>
            <%= form.text_field :user_id, type: "hidden", value: session[:user_id], class: 'form-control mb-4' %>
            <%= form.text_field :room_id, type: "hidden", value: @room.id, class: 'form-control mb-4' %>
            <%= form.text_field :fee, type: "hidden", value: @room.fee, class: 'form-control mb-4' %>
            <%= form.button '予約する', type: 'button', class: 'btn btn-primary form-control', onclick: 'submit()' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>